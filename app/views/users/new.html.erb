<div class="main">
     <h1>Sign Up</h1>

<div class="content-login">
<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div class="head-bar-status-error">
            <strong><%= pluralize(@user.errors.count, "error") %> prevented you from signing up:</strong>
            <ul><% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
        <% end %>
    <div class="box-login"> 
    <p><%= f.label :name %></p>
    <p> <%= f.text_field :name, class: "form-control" %> </p>

    <p><%= f.label :email %></p>
    <p> <%= f.email_field :email, class: "form-control" %> </p>
     
      <p> <%= f.label :password %></p>
      <p><%= f.password_field :password, class: "form-control" %></p>
    
     
      <p><%= f.label :password_confirmation %></p>
      <p><%= f.password_field :password_confirmation, class: "form-control" %></p>
      </div>
      <p><%= submit_tag "Sign In", class: "btn-primary" %></p>
      <% end %>

      
      

      </div>
      <%= render "users/shared/links" %>
      </div>
